@model DefaultViewModel

<div class="section product-tab-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center" data-aos="fade-up">
                <div class="section-title mb-0">
                    <h2 class="title">Ürünlerimiz</h2>
                    <p class="sub-title mb-30px">Estetik ve İşlevsellikteki En Yeni Mobilya Ürünleriyle Evinizdeki Değişimi Keşfedin!</p>
                </div>
            </div>

            <!-- Tab Start -->
            <div class="col-md-12 text-center mb-40px" data-aos="fade-up" data-aos-delay="200">
                <ul class="product-tab-nav nav justify-content-center">
                    <li class="nav-item"><a class="nav-link active" data-bs-toggle="tab" href="#tab-product-new-arrivals">Yeni Eklenenler</a></li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#tab-product-best-sellers">
                            Koltuk Takımları
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#tab-product-sale-item">
                            En Çok Görüntülenler
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#tab-product-on-sales">
                            Bizim Önerdiklerimiz
                        </a>
                    </li>
                </ul>
            </div>
            <!-- Tab End -->
        </div>
        <div class="row">
            <div class="col">
                <div class="tab-content">
                    <!-- 1st tab start -->
                    <div class="tab-pane fade show active" id="tab-product-new-arrivals">
                        <div class="row">
                            @foreach (var product in Model.GetLast8)
                            {
                                <div class="col-lg-3 col-md-6 col-sm-6 col-xs-6 mb-30px" data-aos="fade-up" data-aos-delay="200">
                                    <div class="product">
                                        <div class="thumb">
                                            <a href="/Product/Detail/@product.ProductID" class="image">
                                                <img src="@product.ImageURL" alt="Product" />
                                                <img class="hover-image" src="@product.ImageURL" alt="Product" />
                                            </a>
                                            <span class="badges">
                                                <span class="new">Yeni</span>
                                            </span>
                                            <div class="actions">
                                                <a href="#" class="action wishlist" title="Wishlist">
                                                    <i class="icon-heart"></i>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="content">
                                            <h5 class="title"><a href="shop-left-sidebar.html"> @product.Brand.Name @product.Name @product.Category.Name </a></h5>
                                            <span class="price">
                                                <span class="new">₺@product.Price</span>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="tab-pane fade" id="tab-product-best-sellers">
                        <div class="row">
                            @foreach(var product in Model.GetSalonSet)
                            {
                                <div class="col-lg-3 col-md-6 col-sm-6 col-xs-6 mb-30px" data-aos="fade-up" data-aos-delay="200">
                                    <div class="product">
                                        <div class="thumb">
                                            <a href="/Product/Detail/@product.ProductID" class="image">
                                                <img src="@product.ImageURL" alt="Product" />
                                                <img class="hover-image" src="@product.ImageURL" alt="Product" />
                                            </a>
                                            <div class="actions">
                                                <a href="#" class="action wishlist" title="Wishlist">
                                                    <i class="icon-heart"></i>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="content">
                                            <h5 class="title"><a href="shop-left-sidebar.html"> @product.Brand.Name @product.Name @product.Category.Name </a></h5>
                                            <span class="price">
                                                <span class="new">₺@product.Price</span>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- 3rd tab start -->
                    <div class="tab-pane fade" id="tab-product-sale-item">
                        <div class="row">
                            @foreach (var product in Model.GetMostViewedProducts)
                            {
                                <div class="col-lg-3 col-md-6 col-sm-6 col-xs-6 mb-30px" data-aos="fade-up" data-aos-delay="200">
                                    <div class="product">
                                        <div class="thumb">
                                            <a href="/Product/Detail/@product.ProductID" class="image">
                                                <img src="@product.ImageURL" alt="Product" />
                                                <img class="hover-image" src="@product.ImageURL" alt="Product" />
                                            </a>
                                            <span class="badges">
                                                <span class="new">Beğenilen</span>
                                            </span>
                                            <div class="actions">
                                                <a href="#" class="action wishlist" title="Wishlist">
                                                    <i class="icon-heart"></i>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="content">
                                            <h5 class="title"><a href="shop-left-sidebar.html"> @product.Brand.Name @product.Name @product.Category.Name </a></h5>
                                            <span class="price">
                                                <span class="new">₺@product.Price</span>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- 4th tab start -->
                    <div class="tab-pane fade" id="tab-product-on-sales">
                        <div class="row">
                            @foreach (var product in Model.GetRecommendedProducts)
                            {
                                <div class="col-lg-3 col-md-6 col-sm-6 col-xs-6 mb-30px" data-aos="fade-up" data-aos-delay="200">
                                    <div class="product">
                                        <div class="thumb">
                                            <a href="/Product/Detail/@product.ProductID" class="image">
                                                <img src="@product.ImageURL" alt="Product" />
                                                <img class="hover-image" src="@product.ImageURL" alt="Product" />
                                            </a>
                                            <span class="badges">
                                                <span class="new">Önerilen</span>
                                            </span>
                                            <div class="actions">
                                                <a href="#" class="action wishlist" title="Wishlist">
                                                    <i class="icon-heart"></i>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="content">
                                            <h5 class="title"><a href="shop-left-sidebar.html"> @product.Brand.Name @product.Name @product.Category.Name </a></h5>
                                            <span class="price">
                                                <span class="new">₺@product.Price</span>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
