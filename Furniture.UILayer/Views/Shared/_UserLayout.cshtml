
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@* HeaderPartiali çağırmak için: *@
@await Html.PartialAsync("/Views/UserLayoutPartial/_HeaderPartial.cshtml")

<body class="g-sidenav-show  bg-gray-100">

    @* NavbarPartiali (sol menü) çağırmak için: *@
    @await Html.PartialAsync("/Views/UserLayoutPartial/_NavbarPartial.cshtml")

    <main class="main-content position-relative max-height-vh-100 h-100 mt-1 border-radius-lg ">
        <!-- Navbar -->
        @await Html.PartialAsync("/Views/UserLayoutPartial/_Navbar2Partial.cshtml")
        <!-- End Navbar -->

        <div class="container-fluid py-4">
            @RenderBody()

            @* FooterPartiali çağırmak için: *@
            @await Html.PartialAsync("/Views/UserLayoutPartial/_FooterPartial.cshtml")
        </div>
    </main>
    @* RightbarPartial(sağ taraftaki ayar barı) çağırmak için: *@
    @await Html.PartialAsync("/Views/UserLayoutPartial/_RightbarPartial.cshtml")

    <!--   Core JS Files   -->
    @* ScriptPartial'i çağırmak için : *@
    @await Html.PartialAsync("/Views/UserLayoutPartial/_ScriptPartial.cshtml")

</body>

</html>